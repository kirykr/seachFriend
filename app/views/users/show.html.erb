<div class="page-header">
  <h1>User Details<small>User Stocks</small></h1>
</div>
<dl class="dl-horizontal">
	<dt><strong>Full Name</strong></dt>
	<dd><%= @user.full_name %></dd>
	<dt><strong>Email</strong></dt>
	<dd><%= @user.email %></dd>
</dl>
<% if @user.stocks.size > 0 %>
	<%= render 'stocks/list' %>
<% else %>
	<p class="lead">This user not tracking any stocks</p>
<% end %>

<%= link_to "back", friends_path, class: 'btn btn-xs btn-default' %>
